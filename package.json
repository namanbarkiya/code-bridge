{
  "name": "code-bridge",
  "displayName": "Code Bridge",
  "description": "Bridge chat interfaces (starting with Telegram) to Cursor/VS Code terminal and agent workflows.",
  "version": "0.1.0",
  "publisher": "local",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/namanbarkiya/code-bridge"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeBridge.start",
        "title": "Code Bridge: Start"
      },
      {
        "command": "codeBridge.stop",
        "title": "Code Bridge: Stop"
      },
      {
        "command": "codeBridge.status",
        "title": "Code Bridge: Status"
      }
    ],
    "configuration": {
      "title": "Code Bridge",
      "properties": {
        "codeBridge.botToken": {
          "type": "string",
          "default": "",
          "description": "Telegram Bot token from @BotFather."
        },
        "codeBridge.allowedChatIds": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "default": [],
          "description": "Only these Telegram chat IDs can send messages to your local bridge."
        },
        "codeBridge.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Start the bridge automatically when the extension activates."
        },
        "codeBridge.responseTimeoutSec": {
          "type": "number",
          "default": 300,
          "minimum": 10,
          "description": "Timeout in seconds for waiting on agent completion response."
        },
        "codeBridge.responseDirName": {
          "type": "string",
          "default": ".code-bridge",
          "description": "Workspace directory used for response files."
        },
        "codeBridge.authSecret": {
          "type": "string",
          "default": "",
          "description": "Shared secret for Telegram auth. If set, users must send /auth <secret> before any commands are accepted."
        },
        "codeBridge.maxSessions": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of concurrent terminal sessions."
        },
        "codeBridge.commandTimeoutSec": {
          "type": "number",
          "default": 600,
          "minimum": 10,
          "description": "Max runtime in seconds for a /run command before auto-kill."
        }
      }
    }
  },
  "scripts": {
    "build": "node ./scripts/build.mjs",
    "watch": "node ./scripts/build.mjs --watch",
    "compile": "npm run build",
    "vscode:prepublish": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "grammy": "^1.40.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@types/vscode": "^1.109.0",
    "esbuild": "^0.27.3",
    "typescript": "^5.9.3"
  }
}
